Sub MyMenu()

'Macro below set to set up Excel with my preferred settings
    Call PreferredSettings
    
    Set Bar = MenuBars(xlWorksheet)
'   Reset the MenuBar
    Bar.Reset

    Set GridItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With GridItem
        .BeginGroup = True
        .Caption = "&Grid"
        .FaceId = 2068
        .OnAction = "NoGrid"
    End With
    
    Set FormatUnitsItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With FormatUnitsItem
        .BeginGroup = True
        .Caption = "Format &Units"
        .FaceId = 100
        .OnAction = "FormatUnits"
    End With
    
    Set FormatThousandsItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With FormatThousandsItem
        .BeginGroup = False
        .Caption = "Format &Thousands"
        .FaceId = 99
        .OnAction = "FormatThousands"
    End With
    
    Set FormatMillionsItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With FormatMillionsItem
        .BeginGroup = False
        .Caption = "Format &Millions"
        .FaceId = 92
        .OnAction = "FormatMillions"
    End With
    
    Set FormatPercentageItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With FormatPercentageItem
        .BeginGroup = False
        .Caption = "Format &Percentage"
        .FaceId = 95
        .OnAction = "FormatPercentage"
    End With
    
    
    Set CheckItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With CheckItem
        .BeginGroup = False
        .Caption = "Format &Check"
        .FaceId = 82
        .OnAction = "FormatCheck"
    End With
    
    Set CASItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With CASItem
        .BeginGroup = False
        .Caption = "C&AS"
        .FaceId = 80
        .OnAction = "CAS"
    End With
    
    Set TogglePrintItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With TogglePrintItem
        .BeginGroup = False
        .Caption = "Toggle P&rint"
        .FaceId = 97
        .OnAction = "TogglePrint"
    End With
    
    Set CalcSelItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With CalcSelItem
        .BeginGroup = False
        .Caption = "Calculate &Sel"
        .FaceId = 1032
        .OnAction = "CalcSelection"
    End With
    
    Set CalcFromIndirectItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With CalcFromIndirectItem
        .BeginGroup = False
        .Caption = "From &Indirect"
        .FaceId = 1032
        .OnAction = "CalcFromIndirect"
    End With
    
    Set CalcFormulaReferenceItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With CalcFormulaReferenceItem
        .BeginGroup = False
        .Caption = "&Formula Ref"
        .FaceId = 1032
        .OnAction = "CalcFormulaReference"
    End With
    
    Set CalcSumifsToSumProductItem = CommandBars("Tools").Controls.Add(Type:=msoControlButton)
    With CalcSumifsToSumProductItem
        .BeginGroup = False
        .Caption = "SumIfs To SumPr&oduct"
        .FaceId = 1032
        .OnAction = "CalcSumifsToSumProduct"
    End With

End Sub


Sub PreferredSettings()
    With Application
        .EditDirectlyInCell = False
        .MoveAfterReturn = False
    End With
End Sub
