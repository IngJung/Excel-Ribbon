Sub Delete_Rows_Based_On_Value()
'
'Apply a filter to a Range and delete visible rows
'

    Dim sCrit, sAddress As String
    Dim rData, rFilter As Range
    Dim wsAct As Worksheet
    
    '''Select the criteria you want to be deleted
    ''' If you don't want the criteria deleted, add <> before it - note that there still a slight issue with this formula, will clean it up later
    sCrit = "<>" & 0
    
    Set wsAct = ActiveSheet
    Set rData = Selection
    Set rFilter = rData.Offset(-1, 0).Resize(rData.Rows.Count + 1, 1)
    
        On Error Resume Next
            wsAct.ShowAllData
        On Error GoTo 0
        
        wsAct.Range(rFilter.Address).AutoFilter Field:=1, Criteria1:=sCrit
          
        Application.DisplayAlerts = False
          wsAct.Range(rData.Address).SpecialCells(xlCellTypeVisible).Delete
        Application.DisplayAlerts = True
    
        On Error Resume Next
          wsAct.Range(rFilter.Address).AutoFilter
        On Error GoTo 0

End Sub

Sub Add_To_Formula()

    Dim rSel, rCell As Range
    Dim sAdd, sForm As String
    
    sAdd = "*1000"
    
    Set rSel = Selection
    
    For Each rCell In rSel
        sForm = rCell.Formula
        rCell.Formula = sForm & sAdd
    Next rCell
    
End Sub
